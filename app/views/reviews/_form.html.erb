    <%= f.label :comment %><br />
    <%= f.text_field :comment %>
  </div>
  <div class="field">
    <%= f.label :rating %><br />
    <%= f.select :rating, options_for_select(["5", "4", "3", "2", "1"])%>
  </div>
  <div class="field">
    <%= f.label :plausible_language %><br />
    <%= f.text_field :plausible_language %>
  </div>
  <div class="field">
    <%= f.label :user_interested %><br />
    <%= f.check_box :user_interested %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
