      <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= hidden_field(:review, :proposal_id, :value => params[:proposal_id]) %>
  <%= hidden_field(:review, :user_id, :value => current_user.id) %>

